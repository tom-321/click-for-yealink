{
	"name": "Sippy Click for Yealink",
	"version": "0.9.2",
	"description": "Click and select phone numbers to call them.",
	"homepage_url": "https://github.com/optimise-group/click-for-yealink",
	"manifest_version": 2,
	"browser_specific_settings": {
		"gecko": {
			"id": "sippy-click-for-yealink@mmail4mail.yandex.com",
			"data_collection_permissions": {
				"required": ["none"]
			}
		}
	},
	"icons": {
		"16": "icons/icon16x16.png",
		"32": "icons/icon32x32.png",
		"48": "icons/icon48x48.png",
		"128": "icons/icon128x128.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "icons/icon16x16.png",
			"32": "icons/icon32x32.png"
		},
		"default_title": "Sippy Click",
		"default_popup": "popup/popup.html"
	},
	"permissions": [
		"contextMenus",
		"storage",
		"tabs"
	],
	"options_ui": {
		"chrome_style": false,
		"open_in_tab": true,
		"page": "settings/options.html"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_end"
		}
	]
}
